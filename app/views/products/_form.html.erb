<%= simple_form_for @product, html: { multipart: true } do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, wrapper_html: { class: 'productName' } %>
  <%= f.input :description, wrapper_html: { class: 'productDescription' } %>
  <%= f.input :sku, wrapper_html: { class: 'skuInput' } %>
  <%= f.input :image, as: :file,  wrapper_html: { class: 'inputImage' } %>
  <div class="row">
    <%= f.input :price, wrapper_html: {class: 'priceInput'} %>
    <%= f.input :cost, wrapper_html: { class: 'costInput pl-5' } %>
    <%= f.input :date_available, as: :date, wrapper_html: { class: 'datepicker pl-5' } %>
  </div>
  
  
  
  <%= f.button :submit, class: 'btn-success' %>
  <%= link_to 'Cancel', products_path, class: 'button btn-warning' %>
<% end %>

