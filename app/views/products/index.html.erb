


<div class="container-fluid">
  <div class="display-3 text-center">
    All Products
  </div>
  
  <div class="container image-container">
  <% @products.each_slice(4) do |products| %>
  <div class="row">
    <% products.each do |product| %>
      <div class="col-md-3">
        <div class="product">
          <div class="image_wrapper">
            <%= link_to product do %>
              <%= image_tag(product.image.url,size: '250x250') unless product.image.blank? %>
            <% end %>
          </div>
          <div class="row d-flex">
            <h2>
            <%= link_to truncate(product.name, length: 30), product, class: 'title-link' %>
            <span class="text-right price"><%= number_to_currency(product.price) %></span> 
            </h2>
          
          </div>
          
           
        </div>
      </div>
    <% end %>
  </div>
<% end %>
</div>
  
</div>

